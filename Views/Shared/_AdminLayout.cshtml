<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        body {
            display: flex;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            position: fixed;
            padding-top: 20px;
        }
        .sidebar a {
            padding: 12px;
            display: block;
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>

    @* Sidebar Navigation *@
    <div class="sidebar">
        <h4 class="text-center">Admin Panel</h4>
        @*   <a asp-controller="Dashboard" asp-action="Index"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
        <a asp-controller="Product" asp-action="Create"><i class="fa-solid fa-box"></i> Add Product</a>
        <a asp-controller="Category" asp-action="Index"><i class="fa-solid fa-list"></i> Add Category</a> *@
        <a asp-controller="RawMaterial" asp-action="RawMaterial"><i class="fa-solid fa-industry"></i></a>
        <a asp-controller="ProductAttribute" asp-action="ProductAttribute"><i class="fa-solid fa-tags"></i> Home</a>
        <a asp-controller="Product" asp-action="Products"><i class="fa-solid fa-box"></i> Add Restaurant</a>
        <a asp-controller="Production" asp-action="Index"><i class="fa-solid fa-gears"></i> Orders</a>
        <a asp-controller="PurchaseOrder" asp-action="Index"><i class="fa-solid fa-file-invoice"></i> Analytics</a>
        <a asp-controller="QualityControl" asp-action="Index"><i class="fa-solid fa-shield"></i> Quality Control</a>
        <a asp-controller="ManufacturingCost" asp-action="Index"><i class="fa-solid fa-dollar-sign"></i>Manufacturing</a>
        <a asp-controller="Supplier" asp-action="Index"><i class="fa-solid fa-truck"></i> Notification</a>
        <a asp-controller="SupplierShipment" asp-action="Index"><i class="fa-solid fa-truck-fast"></i> Integration</a>
        <a asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
    </div>

    @* Main Content Area *@
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand">Admin Dashboard</span>
            </div>
        </nav>

        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>